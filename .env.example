# UDO Development Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL
POSTGRES_USER=udo_dev
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=udo_v3

# Database URL (constructed from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# ============================================================================
# Redis Configuration
# ============================================================================

REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ============================================================================
# API Keys (AI Services)
# ============================================================================

# OpenAI API Key
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY_HERE

# Anthropic API Key (Claude)
ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_API_KEY_HERE

# Google Gemini API Key
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# ============================================================================
# Application Configuration
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Next.js Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================================================
# Monitoring & Admin Tools
# ============================================================================

# Grafana Admin Password
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# pgAdmin Configuration
PGADMIN_EMAIL=admin@udo.dev
PGADMIN_PASSWORD=CHANGE_ME_PGADMIN_PASSWORD

# ============================================================================
# Security & Session
# ============================================================================

# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=GENERATE_RANDOM_32_BYTE_HEX_STRING_HERE

# Session Secret (generate with: openssl rand -hex 32)
SESSION_SECRET=GENERATE_RANDOM_32_BYTE_HEX_STRING_HERE

# ============================================================================
# Obsidian Integration (Optional)
# ============================================================================

# Path to Obsidian vault (for knowledge sync)
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# ============================================================================
# Resource Limits (Production)
# ============================================================================

# API Service
API_CPU_LIMIT=2.0
API_MEMORY_LIMIT=2g

# Worker Service
WORKER_CPU_LIMIT=1.0
WORKER_MEMORY_LIMIT=1g

# Database
DB_CPU_LIMIT=1.0
DB_MEMORY_LIMIT=1g

# Redis
REDIS_CPU_LIMIT=0.5
REDIS_MEMORY_LIMIT=512m
